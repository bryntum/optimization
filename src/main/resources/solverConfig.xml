<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<solver xmlns="https://timefold.ai/xsd/solver">
    <monitoring>
        <metric>BEST_SCORE</metric>
    </monitoring>
    <solutionClass>com.optazen.skillmatch.domain.Schedule</solutionClass>
    <entityClass>com.optazen.skillmatch.domain.Event</entityClass>
    <scoreDirectorFactory>
        <constraintProviderClass>com.optazen.skillmatch.solver.ScheduleConstraintProvider</constraintProviderClass>
        <initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>
    </scoreDirectorFactory>
    <termination>
        <secondsSpentLimit>5</secondsSpentLimit>
    </termination>
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>
    <localSearch>
        <localSearchType>LATE_ACCEPTANCE</localSearchType>
    </localSearch>
</solver>